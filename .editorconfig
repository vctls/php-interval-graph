# http://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.php]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120
ij_visual_guides = 80, 120
